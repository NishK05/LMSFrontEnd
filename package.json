{
  "name": "lms-monorepo",
  "version": "1.0.0",
  "description": "Modern Learning Management System Monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "type-check": "pnpm --recursive run type-check",
    "clean": "pnpm --recursive run clean",
    "db:generate": "pnpm --filter api run db:generate",
    "db:push": "pnpm --filter api run db:push",
    "db:migrate": "pnpm --filter api run db:migrate"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
} 